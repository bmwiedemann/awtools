#!/usr/bin/perl -w
use strict;
use CGI ":standard";
chdir "/home/bernhard/code/cvs/perl/awcalc";
require "standard.pm";
require "cgicommon.pm";

our %options;
my $title="AW feed update";
my $debug=1;
print AWheader($title);
foreach my $p (qw(tz html file debug name url)) {
	$options{$p}=param($p);
}
if(param()) {
	chdir("/home/bernhard/code/cvs/perl/awcalc");
	my $html=$options{html};
	if(upload('file')) {
		print "uploaded file $options{file}<br>\n";
		my $bytes_read=read(upload('file'), $html, 40000);
		#print $bytes_read;
	}
	print "input ",length($html)," bytes<br>";
	if($debug) {
		open(DEBUG, "> /tmp/debug");
		print DEBUG time(),"\n";
		foreach(keys(%options)) {
			print DEBUG "$_=$options{$_}\n";
		}
	}
	require './feed/dispatch.pm';
	feed_dispatch($html);
	#print "$html";
} else {
	my $uc=cookie('user');
	if(!$options{name}) {param("name",$uc)}
	print start_form(-method=>'post',-enctype=>"multipart/form-data"),
	textfield(-name=>'tz', -value=>"+1", -class=>'text'), " timezone of subject: GMT+n", br,
	textfield(-name=>'name',-value=>'', -class=>'text'), " who reports (e.g. for own fleet movements)", br,
	textarea(-name=>'html',-value=>"", -cols=>40, -rows=>9, -class=>'text'), " copy+paste HTML source here", br,
	filefield(-name=>'file', -class=>'file'), " or upload a downloaded HTML file", br,
#	checkbox('debug'), br,
	submit(-name=>'add data', -class=>'smbutton'), reset(-class=>'smbutton'), end_form, 
}
print end_html;

